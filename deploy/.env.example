# --- DB ---
DB_NAME=cloudify_DB
DB_USER=cloudify_user
DB_PASSWORD=원하는 값으로 바꾸세요
DB_URL=jdbc:postgresql://db:5432/cloudify_DB

# --- Redis ---
REDIS_HOST=redis
REDIS_PORT=6379

# --- Spring ---
PORT=8080

# --- JWT ---
JWT_SECRET=change-me-to-a-32byte-min-random-string
JWT_ISSUER=cloudify-api
JWT_ACCESS_TOKEN_EXPIRATION=900000
JWT_REFRESH_TOKEN_EXPIRATION=1209600000
JWT_ALLOWED_CLOCK_SKEW_SECONDS=30

# --- Goggle Cloud Console ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# --- Crypto (AES-GCM for encrypting Google OAuth tokens) ---
CRYPTO_MASTER_KEY=base64-encoded-32byte-key

# --- CORS / Cookie ---
CORS_ALLOWED_ORIGINS=http://localhost:3000   # 프론트 배포되면 그 오리진으로 바꿔치기
COOKIE_SECURE=true                           # 로컬 HTTP면 false, HTTPS면 true
COOKIE_SAMESITE=None                         # 분리 오리진이면 None, 같은 오리진이면 Lax/Strict
